<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>

    <package name="actionmappingxml" namespace="/holamundo" extends="struts-default">

        <default-action-ref name="struts2" />

        <action name="holaMundo" method="holaMundo" class="com.juancarlos.example.mvc.actionmapping.EjemploActionOrController">
            <result>/WEB-INF/views/holamundo.jsp</result>
        </action>

        <action name="struts2" method="struts2" class="com.juancarlos.example.mvc.actionmapping.EjemploActionOrController">
            <result>/WEB-INF/views/struts2.jsp</result>
        </action>

        <action name="spring" method="spring" class="com.juancarlos.example.mvc.actionmapping.EjemploActionOrController">
            <result>/WEB-INF/views/spring.jsp</result>
        </action>

        <action name="hibernate" method="hibernate" class="com.juancarlos.example.mvc.actionmapping.EjemploActionOrController">
            <result>/WEB-INF/views/hibernate.jsp</result>
        </action>

        <action name="jpa2" method="jpa2" class="com.juancarlos.example.mvc.actionmapping.EjemploActionOrController">
            <result>/WEB-INF/views/jpa2.jsp</result>
        </action>

    </package>

    <package name="default" namespace="/" extends="struts-default">

        <default-action-ref name="index"/>

        <action name="index">
            <result>/WEB-INF/views/index.jsp</result>
        </action>

    </package>

    <!-- Add addition packages and configuration here. -->
</struts>
